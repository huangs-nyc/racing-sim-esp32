void createTrack() {
  float trackWidth = 120;
  float waveHeight = 250;
  float segmentWidth = width / 4;

  // Create the outer edge of the track (bezier curve)
  outerTrack = createShape();
  outerTrack.beginShape();
  outerTrack.noFill();
  outerTrack.stroke(255);
  outerTrack.strokeWeight(20);

  outerTrack.vertex(0, height * 3 / 4);
  outerTrack.bezierVertex(segmentWidth / 3, height * 3 / 4 - waveHeight, 
                          segmentWidth * 2 / 3, height * 3 / 4 - waveHeight, 
                          segmentWidth, height * 3 / 4);
  outerTrack.bezierVertex(segmentWidth * 4 / 3, height * 3 / 4 + waveHeight, 
                          segmentWidth * 5 / 3, height * 3 / 4 + waveHeight, 
                          segmentWidth * 2, height * 3 / 4);
  outerTrack.bezierVertex(segmentWidth * 7 / 3, height * 3 / 4 - waveHeight, 
                          segmentWidth * 8 / 3, height * 3 / 4 - waveHeight, 
                          segmentWidth * 3, height * 3 / 4);
  outerTrack.bezierVertex(segmentWidth * 10 / 3, height * 3 / 4 + waveHeight, 
                          segmentWidth * 11 / 3, height * 3 / 4 + waveHeight, 
                          segmentWidth * 4, height * 3 / 4);
  outerTrack.endShape();

  // Create the inner edge of the track
  innerTrack = createShape();
  innerTrack.beginShape();
  innerTrack.noFill();
  innerTrack.stroke(255);
  innerTrack.strokeWeight(20);

  innerTrack.vertex(0, height / 4);
  innerTrack.bezierVertex(segmentWidth / 3, height / 4 - waveHeight / 2, 
                          segmentWidth * 2 / 3, height / 4 - waveHeight / 2, 
                          segmentWidth, height / 4);
  innerTrack.bezierVertex(segmentWidth * 4 / 3, height / 4 + waveHeight / 2, 
                          segmentWidth * 5 / 3, height / 4 + waveHeight / 2, 
                          segmentWidth * 2, height / 4);
  innerTrack.bezierVertex(segmentWidth * 7 / 3, height / 4 - waveHeight / 2, 
                          segmentWidth * 8 / 3, height / 4 - waveHeight / 2, 
                          segmentWidth * 3, height / 4);
  innerTrack.bezierVertex(segmentWidth * 10 / 3, height / 4 + waveHeight / 2, 
                          segmentWidth * 11 / 3, height / 4 + waveHeight / 2, 
                          segmentWidth * 4, height / 4);
  innerTrack.endShape();
}
